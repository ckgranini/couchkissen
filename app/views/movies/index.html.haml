= render 'search/search_movies'
- if params[:layout] == "grid"
  - params[:width] ||= "92"
  .grid.main.ta-center
    - @movies.each do |movie|
      = link_to image_tag("http://cf2.imgobject.com/t/p/w"+ params[:width] +"/" + movie.poster_id + ".jpg", title: movie.title, class: "thumb_grid"), movie
- else
  = render @movies